@page "{id}"
@model RazorPagesRentCar.Pages.Cars.DetailsModel
@{
    ViewData["Title"] = "Details";
    var photoPath = $"/images/{Model.Cars.PhotoPath ?? "no-photo.png"}";
}

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <vc:head-count district="@Model.Cars.District"></vc:head-count>
    </div>
</div>

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <div class="card cardBoxShadow">
            <div class="card-header cardHeaderStyle text-center">
                <h1>@Model.Cars.Name</h1>

            </div>
            <div class="card-body cardBoxStyle text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftFloating">Car ID: @Model.Cars.Id</h4><hr />
                        <h4 class="cardTextLeftFloating">Price: @Model.Cars.Price</h4><hr />
                        <h4 class="cardTextLeftFloating">District: <span class="text-danger font-weight-bold">@Model.Cars.District</span></h4><hr />
                    </div>
                    <div class="col col-lg-3">
                        <div style="border-right:1px solid rgba(0,0,0,.1);">
                            <img class="card-img-top imageThumbnail border border-primary" src="@photoPath" asp-append-version="true"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card-footer text-center" style="background-color: rgba(0,0,0,0.25);">
                            <a asp-page="Cars" class="btn btn-success buttonShadow">Back</a>
                            <a asp-page="/Cars/Edit" asp-route-ID="@Model.Cars.Id"class="btn btn-primary buttonShadow">Edit</a>
                            <a asp-page="/Cars/Delete" asp-route-ID="@Model.Cars.Id" class="btn btn-danger buttonShadow">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>