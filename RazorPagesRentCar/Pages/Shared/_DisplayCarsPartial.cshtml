@model Car

@{
    var photoPath = $"/images/{Model.PhotoPath ?? "no-photo.jpg"}";
    var showButtons = (bool)ViewData["ShowButtons"];
}


<div class="card-deck">
    <div class="card m-3 cardBoxShadow">
        <div class="card-header text-center cardHeaderStyle">
            <h3>@Model.Name</h3>
        </div>

        <div class="text-center cardBoxStyle">
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
        </div>

        @if (showButtons)
        {
            <div class="card-footer text-center">
                <a asp-page="/Cars/Details" asp-route-ID="@Model.Id" class="btn btn-success m-1 buttonShadow">View</a>
            <a asp-page="/Cars/Edit" asp-route-ID="@Model.Id" class="btn btn-primary m-1 buttonShadow">Edit</a>
            <a asp-page="/Cars/Delete" asp-route-ID="@Model.Id" class="btn btn-danger m-1 buttonShadow">Delete</a>
        </div>
        }
    </div>
</div>
